BEGIN;

	-- Fisrt alter the name of the existing large table & any constraints
	ALTER TABLE "PharmanetTransactionLogs" 						RENAME TO 			PharmanetTransactionLogs_2021_2022_07;
   ALTER TABLE PharmanetTransactionLogs_2021_2022_07 		DROP CONSTRAINT 	"PK_PharmanetTransactionLogs"; --RENAME CONSTRAINT "PK_PharmanetTransactionLogs" TO "PK_PharmanetTransactionLogs_Legacy";

	-- Alter the names off all table indexes
	ALTER INDEX IF EXISTS "IX_PharmanetTransactionLogs_PharmacyId" 		RENAME TO "IX_PharmanetTransactionLogs_2021_2022_07_PharmacyId";
	ALTER INDEX IF EXISTS "IX_PharmanetTransactionLogs_TransactionId"  	RENAME TO "IX_PharmanetTransactionLogs_2021_2022_07_TransactionId";
	ALTER INDEX IF EXISTS "IX_PharmanetTransactionLogs_TxDateTime" 		RENAME TO "IX_PharmanetTransactionLogs_2021_2022_07_TxDateTime";
	ALTER INDEX IF EXISTS "IX_PharmanetTransactionLogs_UserId" 				RENAME TO "IX_PharmanetTransactionLogs_2021_2022_07_UserId";

	-- Create a new table with the original table name, now partitioned by Range of TxDateTime
	CREATE TABLE "PharmanetTransactionLogs" (
		"Id" 								int8  		NOT NULL GENERATED BY DEFAULT AS IDENTITY ,
		"CreatedTimeStamp" 			timestamptz NOT NULL DEFAULT CURRENT_TIMESTAMP,
		"TransactionId" 				int8 			NOT NULL,
		"TxDateTime" 					timestamp 	NOT NULL,
		"UserId" 						text 			NULL,
		"PharmacyId" 					text 			NULL,
		"TransactionType" 			text 			NULL,
		"TransactionSubType" 		text 			NULL,
		"PractitionerId" 				text 			NULL,
		"CollegePrefix" 				text 			NULL,
		"TransactionOutcome" 		text 			NULL,
		"ProviderSoftwareId" 		text 			NULL,
		"ProviderSoftwareVersion" 	text 			NULL,
		"LocationIpAddress" 			text 			NULL,
		"SourceIpAddress" 			text 			NULL,
		CONSTRAINT "PK_PharmanetTransactionLogs" PRIMARY KEY ("Id","TxDateTime")
		
	) PARTITION BY RANGE ("TxDateTime");

	-- Create indexes as they were originally
	CREATE INDEX IF NOT EXISTS "IX_PharmanetTransactionLogs_PharmacyId" 		ON public."PharmanetTransactionLogs" USING btree ("PharmacyId");
	CREATE INDEX IF NOT EXISTS "IX_PharmanetTransactionLogs_TransactionId" 	ON public."PharmanetTransactionLogs" USING btree ("TransactionId");
	CREATE INDEX IF NOT EXISTS "IX_PharmanetTransactionLogs_TxDateTime" 		ON public."PharmanetTransactionLogs" USING btree ("TxDateTime");
	CREATE INDEX IF NOT EXISTS "IX_PharmanetTransactionLogs_UserId" 			ON public."PharmanetTransactionLogs" USING btree ("UserId");
	
	DO $$ -- PLPGSQL annonymous code block

		BEGIN
			-- Only because we know and trust the data. Accept the constraint is satisfied.
			ALTER TABLE PharmanetTransactionLogs_2021_2022_07
				ADD CONSTRAINT PharmanetTransactionLogs_2021_2022_07_txdate
					CHECK ("TxDateTime" >= '2021-01-01' AND "TxDateTime" < '2022-08-01') NOT VALID;
			-- Avoids total table scan and allows us to add table to partition with minimal logging
			UPDATE pg_constraint 
				SET convalidated = TRUE 
				WHERE conname = 'PharmanetTransactionLogs_2021_2022_07_txdate';
			-- Attach legacy table to new partition table
	
			ALTER TABLE "PharmanetTransactionLogs"
				ATTACH PARTITION PharmanetTransactionLogs_2021_2022_07
					FOR VALUES FROM ('2021-01-01') to ('2022-08-01');
		END;
	$$ LANGUAGE PLPGSQL;
COMMIT;

	-- Create future partitions
CREATE TABLE PharmanetTransactionLogs_p2022_0812 -- fill remainder of 2022 data
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2022-08-01') TO ('2023-01-01');

CREATE TABLE PharmanetTransactionLogs_p2023_Q1	-- Quarterly partitions
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2023-01-01') TO ('2023-04-01');

CREATE TABLE PharmanetTransactionLogs_p2023_Q2	
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2023-04-01') TO ('2023-07-01');

CREATE TABLE PharmanetTransactionLogs_p2023_Q3	
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2023-07-01') TO ('2023-10-01');

CREATE TABLE PharmanetTransactionLogs_p2023_Q4	
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2023-10-01') TO ('2024-01-01');

CREATE TABLE PharmanetTransactionLogs_p2024_Q1	
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2024-01-01') TO ('2024-04-01');

CREATE TABLE PharmanetTransactionLogs_p2024_Q2	
PARTITION OF "PharmanetTransactionLogs"
	FOR VALUES FROM ('2024-04-01') TO ('2024-07-01');

CREATE TABLE PharmanetTransactionLogs_DEFAULT	
PARTITION OF "PharmanetTransactionLogs"
	DEFAULT;
	-- ROLLBACK

